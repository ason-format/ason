{
  "name": "@ason-format/ason",
  "version": "1.0.0",
  "description": "ASON (Aliased Serialization Object Notation) - Token-optimized JSON compression for LLMs. Reduces tokens by 20-60% while maintaining perfect round-trip fidelity.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "bin": {
    "ason": "./src/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist/",
    "src/cli.js",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ason-format/ason.git"
  },
  "bugs": {
    "url": "https://github.com/ason-format/ason/issues"
  },
  "homepage": "https://seanluis.github.io/ason/",
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "benchmark": "node benchmarks/run-all-benchmarks.js",
    "benchmark:comparison": "node benchmarks/comparison-benchmark.js",
    "benchmark:complex": "node benchmarks/complex-json-benchmark.js",
    "benchmark:tokens": "node benchmarks/token-efficiency-benchmark.js",
    "benchmark:performance": "node benchmarks/performance-benchmark.js",
    "example": "node examples/example.js"
  },
  "keywords": [
    "ason",
    "json",
    "compression",
    "llm",
    "tokens",
    "optimization",
    "serialization",
    "chatgpt",
    "claude",
    "gpt",
    "ai",
    "token-optimization",
    "data-compression"
  ],
  "author": "ASON Project Contributors",
  "license": "MIT",
  "dependencies": {
    "@toon-format/toon": "^0.9.0",
    "gpt-tokenizer": "^3.4.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.cjs"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
